Global WindowMain

Global Viewer

Enumeration FormFont
  #Font_WindowMain
EndEnumeration

LoadFont(#Font_WindowMain,"Arial", 12)


Procedure OpenWindowMain(x = 0, y = 0, width = 300, height = 180)
  WindowMain = OpenWindow(#PB_Any, x, y, width, height, "Corona-Info", #PB_Window_SystemMenu | #PB_Window_TitleBar | #PB_Window_ScreenCentered)
  Viewer = ListIconGadget(#PB_Any, 10, 10, 280, 160, "Ort", 150, #PB_ListIcon_GridLines | #PB_ListIcon_FullRowSelect)
  AddGadgetColumn(Viewer, 1, "7-Tage-Inzidenz", 126)
  SetGadgetFont(Viewer, FontID(#Font_WindowMain))
EndProcedure

Procedure WindowMain_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure

